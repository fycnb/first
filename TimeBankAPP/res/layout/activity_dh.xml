<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.timebankapp.DHActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#4915e5" >

        <ImageView
            android:id="@+id/timemoneyimage_ImageView"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="我的时间币:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/timemoneynumber_TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="xxxx"
            android:textColor="#B22F2E"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F0EDED" >

        <Button
            android:id="@+id/goods_Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:text="商品列表"
            android:textSize="11sp" />

        <Button
            android:id="@+id/serve_Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="服务列表"
            android:textSize="11sp" />

        <Button
            android:id="@+id/cash_Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="1"
            android:text="提现"
            android:textSize="11sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/convertlist_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>