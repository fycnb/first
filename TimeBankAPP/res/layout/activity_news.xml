<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.timebankapp.News.NewsActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#4915e5"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/activityhistory_Button"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/message_Button"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/communityinfo_ImageView"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/rankimage_ImageView"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp" />

        <TextView
            android:id="@+id/ranktext_TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="小区里的排名为:" />

        <TextView
            android:id="@+id/ranknumber_TextView"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="xxxxxx" />

        <ImageView
            android:id="@+id/rankchange_ImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="活动备忘录" />

    <ListView
        android:id="@+id/joinactivity_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/joinactivityempty_TextView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="暂无" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:text="我兑换的服务" />

    <ListView
        android:id="@+id/publishactivity_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/publishactivityempty_TextView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text="暂无" />

</LinearLayout>