<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.test.MainActivity"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/s2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:text="@string/zh"
        android:textSize="20sp"
        android:layout_marginStart="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/s2"
        android:layout_marginTop="60dp"
        android:text="@string/mm"
        android:textSize="20sp"
        android:id="@+id/textView"
        android:layout_alignStart="@+id/s2" />

    <EditText
        android:id="@+id/account_edit_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password_edit_Text"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/password_edit_Text"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/password_edit_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="80dp"
        android:text="@string/dl"
        android:layout_marginStart="80dp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/login_button"
        android:layout_alignTop="@+id/login_button"
        android:text="@string/zc"
        tools:ignore="RtlHardcoded" />


</RelativeLayout>
